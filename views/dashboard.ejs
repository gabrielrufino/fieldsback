<!DOCTYPE html>

<html lang="en">
  <%- include('elements/head') %>
  
  <body class="bg-light">
    <%- include('elements/header') %>
  
    <div class="container">
      <%- include('elements/title', {title: 'Admin Panel'}) %>
      <%- include('elements/adminMenu') %>

      <div class="my-4">
        <div class="row">
          <div class="col-md-4">
            <div class="display-1 text-center my-4 py-1"><%= data.total %></div>
            <h2 class="text-center">Feedbacks</h2>
          </div>
          <div class="col-md-4">
            <canvas id="rating"></canvas>
            <h2 class="text-center">Rating</h2>
          </div>
          <div class="col-md-4">
            <canvas id="timeline"></canvas>
            <h2 class="text-center">Timeline</h2>  
          </div>
        </div>
    </div>
    
  <%- include('elements/scripts') %>
  
  <script>
    const ctxRating = document.getElementById('rating')
    const ctxTimeline = document.getElementById('timeline')

    const ratingGraph = new Chart(ctxRating, {
      type: 'pie',
      data: {
        datasets: [{
          data: [20, 20, 20, 20, 20]
        }]
      }
    })

    const timelineGraph = new Chart(ctxTimeline, {
      type: 'line'
    })
  </script>
  </body>
</html>